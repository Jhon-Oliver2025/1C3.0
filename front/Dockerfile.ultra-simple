# Dockerfile ultra-simples para Coolify
FROM node:18-alpine

WORKDIR /app

# Copiar tudo
COPY . .

# Instalar dependÃªncias sem flags especiais
RUN npm install

# Build
RUN npm run build

# Servir com nginx
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]