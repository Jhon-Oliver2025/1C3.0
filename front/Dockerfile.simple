FROM node:18-alpine

WORKDIR /app

# Instalar dependências básicas
RUN apk add --no-cache curl

# Copiar e instalar dependências
COPY package*.json ./
RUN npm install

# Copiar código
COPY . .

# Build
RUN npm run build

# Instalar serve para servir arquivos estáticos
RUN npm install -g serve

# Expor porta
EXPOSE 3000

# Servir aplicação
CMD ["serve", "-s", "dist", "-l", "3000"]