FROM node:18-alpine

WORKDIR /app

# Copiar apenas o package.json primeiro
COPY package.json ./

# Instalar dependências
RUN npm install --legacy-peer-deps

# Copiar todo o código
COPY . .

# Build simples
RUN npm run build

# Nginx para servir
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]