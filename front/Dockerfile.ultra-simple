# Dockerfile ultra-simples para Coolify
FROM node:18-alpine

# Habilitar corepack para usar yarn
RUN corepack enable

WORKDIR /app

# Copiar package.json
COPY package.json ./

# Instalar dependências com npm
RUN npm install --legacy-peer-deps

# Copiar código fonte
COPY . .

# Build da aplicação
RUN npm run build

# Servir com nginx
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]